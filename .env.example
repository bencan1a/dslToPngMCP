# DSL to PNG MCP Server Environment Configuration
# ================================================
# Copy this file to .env and update the values for your environment

# Application Configuration
DSL_PNG_APP_NAME="DSL to PNG MCP Server"
DSL_PNG_APP_VERSION="1.0.0"
DSL_PNG_ENVIRONMENT="development"  # development, testing, production
DSL_PNG_DEBUG=true

# Server Configuration
DSL_PNG_HOST="0.0.0.0"
DSL_PNG_PORT=8000
DSL_PNG_WORKERS=1

# MCP Server Configuration
DSL_PNG_MCP_HOST="localhost"
DSL_PNG_MCP_PORT=3001

# Redis Configuration
DSL_PNG_REDIS_URL="redis://localhost:6379/0"
DSL_PNG_REDIS_MAX_CONNECTIONS=10

# Database Configuration (Optional - PostgreSQL)
# DSL_PNG_DATABASE_URL="postgresql://user:password@localhost:5432/dsl_png_db"

# Storage Configuration
DSL_PNG_STORAGE_PATH="./storage"
DSL_PNG_TEMP_PATH="./tmp"
DSL_PNG_CACHE_TTL=3600

# Rendering Configuration
DSL_PNG_DEFAULT_WIDTH=800
DSL_PNG_DEFAULT_HEIGHT=600
DSL_PNG_MAX_WIDTH=2000
DSL_PNG_MAX_HEIGHT=2000
DSL_PNG_RENDER_TIMEOUT=30

# Browser Configuration
DSL_PNG_PLAYWRIGHT_HEADLESS=true
DSL_PNG_PLAYWRIGHT_TIMEOUT=30000
DSL_PNG_BROWSER_POOL_SIZE=5

# Celery Configuration
DSL_PNG_CELERY_BROKER_URL="redis://localhost:6379/1"
DSL_PNG_CELERY_RESULT_BACKEND="redis://localhost:6379/1"
DSL_PNG_CELERY_TASK_TIMEOUT=300

# Security Configuration
DSL_PNG_ALLOWED_HOSTS=["*"]
# DSL_PNG_API_KEY=""  # Optional API key for authentication
DSL_PNG_SECRET_KEY="dev-secret-key-change-in-production"

# Monitoring Configuration
DSL_PNG_ENABLE_METRICS=true
DSL_PNG_METRICS_PORT=9090
DSL_PNG_LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Production-specific settings (uncomment for production)
# DSL_PNG_ENVIRONMENT="production"
# DSL_PNG_DEBUG=false
# DSL_PNG_LOG_LEVEL="WARNING"
# DSL_PNG_WORKERS=4
# DSL_PNG_SECRET_KEY="your-secure-secret-key-here"
# DSL_PNG_ALLOWED_HOSTS=["yourdomain.com", "api.yourdomain.com"]

# Sentry Configuration (Production monitoring)
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# External Service URLs (if using remote services)
# EXTERNAL_REDIS_URL="redis://user:password@redis-host:6379/0"
# EXTERNAL_BROWSER_SERVICE_URL="ws://browserless-host:3000"

# Docker-specific settings (when running in containers)
# DSL_PNG_HOST="0.0.0.0"
# DSL_PNG_REDIS_URL="redis://redis:6379/0"
# DSL_PNG_CELERY_BROKER_URL="redis://redis:6379/1"
# DSL_PNG_CELERY_RESULT_BACKEND="redis://redis:6379/1"